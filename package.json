{
  "name": "accounting-system",
  "version": "1.0.0",
  "description": "نظام محاسبي متكامل مبني باستخدام Next.js و TypeScript لإدارة شاملة للأعمال التجارية",
  "author": "Accounting System Team",
  "license": "MIT",
  "keywords": ["accounting", "invoicing", "inventory", "business", "nextjs", "typescript", "arabic"],
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "export": "next export",
    "build:static": "cross-env BUILD_STATIC=true next build",
    "build:docker": "docker build -t accounting-system .",
    "start:docker": "docker run -p 3000:3000 accounting-system",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod",
    "analyze": "cross-env ANALYZE=true next build",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next out dist"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/auth-helpers-react": "^0.5.0",
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "@supabase/supabase-js": "^2.53.0",
    "date-fns": "^4.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.536.0",
    "next": "15.4.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.5.2",
    "recharts": "^3.1.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/accounting-system.git"
  },
  "homepage": "https://accounting-system.vercel.app",
  "bugs": {
    "url": "https://github.com/your-username/accounting-system/issues"
  }
}
